---
import { Image } from "astro:assets";

import QualabsLogo from "@assets/qualabs.svg";
import QualabsText from "@assets/qualabs-text.svg";
---

<div class="marquee-container">
  <div class="marquee">
    <img src={QualabsLogo.src} alt="Qualabs Logo" />
    <img src={QualabsText.src} alt="Qualabs Text" />
  </div>
</div>

<style>
  .marquee-container {
    display: block;
    position: relative;
    width: 100%;
    overflow: auto;
    padding: 1rem 0 1rem 1rem;

    @media (min-width: 768px) {
      padding: 1rem 0 3rem 1rem;
    }
  }
  .marquee {
    display: grid;
    align-items: center;
    gap: 0.25rem;
    width: max-content;
    margin: 0;
    text-align: center;
    padding: 0.5rem;
    background: rgba(255, 255, 255, 0.89);
    border: 1px solid #ffffff;
    backdrop-filter: blur(7px);
    width: 100%;
    box-shadow: 0px 4px 1rem rgba(0, 0, 0, 0.25);
    border-radius: 0.2rem;
    @media (min-width: 768px) {
      padding: 1rem;
      grid-template-columns: auto 1fr;
      gap: 1rem;
    }

    span {
      text-transform: uppercase;
      color: black;
    }

    img {
      &:nth-child(1) {
        height: 100%;
        width: 20vw;

        @media (min-width: 768px) {
          width: 15vw;
        }
      }

      &:nth-child(2) {
        width: 80vw;

        @media (min-width: 768px) {
          width: 60vw;
        }
      }
    }
  }
</style>
