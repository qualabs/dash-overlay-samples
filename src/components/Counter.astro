---
import ArrowDownIcon from "@assets/icons/arrow-down.svg";
import { Image } from "astro:assets";
import arg from "../assets/arg.png";
import uru from "../assets/uru.png";
---

<div class="stats-container collapsed">
  <div class="stats-header">
    <div class="team">
      <img src={uru.src} alt="Uruguay" />
      <h2>URUGUAY</h2>
    </div>
    <div class="goal-count">
      <h2>3 : 0</h2>
    </div>
    <div class="team">
      <img src={arg.src} alt="Argentina" />
      <h2>ARGENTINA</h2>
    </div>
  </div>
  <table class="stats-table">
    <tr>
      <td>47</td>
      <td>BALL POSSESSION (%)</td>
      <td>53</td>
    </tr>
    <tr>
      <td>13</td>
      <td>SHOTS</td>
      <td>8</td>
    </tr>
    <tr>
      <td>3</td>
      <td>SHOTS ON GOAL</td>
      <td>4</td>
    </tr>
    <tr>
      <td>2</td>
      <td>CORNERS</td>
      <td>4</td>
    </tr>
    <tr>
      <td>123</td>
      <td>SHORT PASSES</td>
      <td>207</td>
    </tr>
  </table>
  <div class="show-less">
    <h3 id="show-less-text">Show Stats</h3>
    <Image src={ArrowDownIcon} alt="" width="10" />
  </div>
</div>

<style lang="scss">
  @keyframes animation-slide-in-up {
    from {
      transform: translateY(100%);
    }
    to {
      transform: translateY(0);
    }
  }

  @keyframes animation-scale-down {
    from {
      transform: scale(1);
    }
    to {
      transform: scale(0.9);
    }
  }

  .stats-header {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    gap: 0.5rem;
    align-items: center;
    padding: 0.5rem;
    width: max-content;

    @media screen and (max-width: 768px) {
    }
    .team {
      display: grid;
      gap: 0rem;
      align-items: center;
      justify-items: center;
      img {
        width: 2rem;

        @media screen and (min-width: 768px) {
          width: 4rem;
        }
      }

      h2 {
        font-weight: 600;
        font-size: 0.8rem;
        color: #797979;
        margin: 0;
      }
    }
  }
  .goal-count {
    h2 {
      text-align: center;
      font-weight: 600;
      font-size: 1.6rem;

      color: #797979;
    }
  }
  .stats-container {
    position: absolute;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: fit-content;
    margin: 0 auto;
    color: #333;
    pointer-events: auto;
    background-color: #fff;
    box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.25);
    border-radius: 0.5rem;
    padding: 0.1rem;
    height: fit-content;
    transition: all 0.3s ease;
    margin-bottom: 30px;

    &:hover {
      box-shadow: 0px 0px 40px rgba(0, 0, 0, 0.25);
    }

    @media screen and (min-width: 768px) {
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      transform-origin: top right;
    }

    .stats-table {
      width: 100%;
      border-collapse: collapse;
      border-spacing: 0;
      border-top: #333 1px solid;

      padding: 0.3rem;
      display: grid;
      overflow: hidden;
      transition: all 0.3s aes-in-out;
      width: max-content;
      margin: 0 auto;

      @media screen and (min-width: 768px) {
        padding: 1rem 2rem;
      }

      td,
      th {
        padding: 0.1rem;
        text-align: center;
        font-size: 0.8rem;
        font-family: "Inter";
        font-style: normal;
        font-weight: 600;
        line-height: 250%;
        color: #000000;

        @media screen and (min-width: 768px) {
          padding: 0.5rem 1rem;
        }
      }
    }

    .show-less {
      display: flex;
      padding: 0.33rem 0.25rem 0.25rem 0.25rem;
      gap: 0.3rem;
      border-top: #717171 1px solid;
      width: 100%;
      text-align: center;
      justify-content: center;
      cursor: pointer;

      h3 {
        color: #797979;
        font-size: 0.9rem;
      }

      img {
        opacity: 0.8;
        transform: rotate(180deg);
      }
    }

    &:not(.collapsed) {
      .show-less {
        @media screen and (max-width: 768px) {
          display: none;
        }
      }
    }

    &.collapsed {
      top: 0.3rem;
      left: 0.3rem;
      transform: translate(0, 0);

      @media screen and (min-width: 768px) {
        top: 1rem;
        left: 1rem;
        padding: 0.5rem;
      }

      .stats-table {
        display: none;
      }

      .stats-header {
        grid-template-columns: 1fr auto 1fr;
        .team {
          display: flex;

          h2 {
            width: 1.3rem;
            overflow: hidden;
            font-size: 0.6rem;

            @media screen and (min-width: 768px) {
              font-size: 0.9rem;
              width: 1.7rem;
            }
          }

          img {
            width: 1.4rem;

            @media screen and (min-width: 768px) {
              width: 2.4rem;
            }
          }

          &:nth-child(1) {
            flex-direction: row-reverse;
          }
        }
        .goal-count {
          h2 {
            font-size: 1rem;
          }
        }
      }
      .show-less {
        #show-less-text {
          font-size: 0.6rem;

          @media screen and (min-width: 768px) {
            font-size: 0.7rem;
          }
        }
        img {
          transform: rotate(0deg);
          width: 0.7rem;
        }
      }
    }
  }
</style>
<script>
  document.addEventListener("DOMContentLoaded", () => {
    const showLessButton = document.querySelector(".show-less");
    const showLessText = document.querySelector("#show-less-text");
    const statsContainer = document.querySelector(".stats-container");

    showLessButton.addEventListener("click", () => {
      if (statsContainer.classList.contains("collapsed")) {
        statsContainer.classList.remove("collapsed");
        showLessText.textContent = "Hide Stats";
      } else {
        statsContainer.classList.add("collapsed");
        showLessText.textContent = "Show Stats";
      }
    });

    window.addEventListener("click", (e) => {
      if (
        !statsContainer.contains(e.target) &&
        !statsContainer.classList.contains("collapsed")
      ) {
        statsContainer.classList.add("collapsed");
        showLessText.textContent = "Show Stats";
      }
    });
  });
</script>
