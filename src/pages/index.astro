---
import Layout from '../layouts/Layout.astro';

import { Image } from 'astro:assets';

import dashjsLogo from '../assets/dashjs-logo.svg';

---

<Layout title="Qualabs | dash.js Overlay Samples">
	<main>
		<Image src={dashjsLogo} alt="dash.js Logo" width="300" class="logo" />
		<h1>Elevate Video Experiences with <span class="text-gradient">Dynamic Overlays</span>!</h1>
		<p class="instructions">
			Unlock new possibilities adding videos, images, and interactive iframes into <code>dash.js</code><br />
		</p>
	
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.instructions {
		margin-bottom: 2rem;
		border: 1px solid rgba(var(--accent-light), 25%);
		background: linear-gradient(rgba(var(--accent-dark), 66%), rgba(var(--accent-dark), 33%));
		padding: 1.5rem;
		border-radius: 8px;
	}
	.instructions code {
		font-size: 0.8em;
		font-weight: bold;
		background: rgba(var(--accent-light), 12%);
		color: rgb(var(--accent-light));
		border-radius: 4px;
		padding: 0.3em 0.4em;
	}
	.instructions strong {
		color: rgb(var(--accent-light));
	}
	.logo {
		margin: 0 auto;
	}
</style>
