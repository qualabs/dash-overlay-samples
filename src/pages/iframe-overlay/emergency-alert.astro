---
import EmergencyAlert from "@components/EmergencyAlert.astro";
import IFrameLayout from "@layouts/IFrameLayout.astro";
---

<IFrameLayout title="Qualabs | Emergency Alert">
  <div class="container h-full flex flex-col justify-center items-center">
    <EmergencyAlert
      title="National Weather Service: TORNADO WARNING in this area until 10:15 AM EST."
      message="Take shelter now in a basement or an interior room on the lowest floor of a sturdy building. Check media."
    />
  </div>
</IFrameLayout>

<style>
  .container {
    margin: 0 auto;
  }

  .alert-container {
    border: 1px solid rgba(224, 204, 250, 100%);
    background: rgba(49, 10, 101, 100%);
  }

  h1 {
    font-size: 2rem;
    font-weight: bold;
    margin: 0;
    text-transform: uppercase;
  }

  p {
    margin: 0;
  }
</style>
